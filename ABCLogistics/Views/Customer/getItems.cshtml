@model IEnumerable<ABCLogistics.Data.Item>

@{
    ViewBag.Title = "All Items";
}

<h2>All Items</h2>

<p>
    @Html.ActionLink("Add New Item", "addItem", "Order")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SizeCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecordedDelivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsuranceType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecordedDelivery)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InsuranceType)
        </td>
        <td>
            @Html.ActionLink("Edit", "editItem", new { id=item.PK_ItemID, controller = "Order" }) |
            @Html.ActionLink("Details", "getItem", new { id=item.PK_ItemID }) |
            @Html.ActionLink("Delete", "deleteItem", new { id=item.PK_ItemID, controller = "Order" })
        </td>
    </tr>
}

</table>
