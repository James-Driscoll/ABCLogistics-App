@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Create New Role", "CreateRole")
</p>

<table class="table">
    <tr>
        <th>Roles ID</th>
        <th>Role Name</th>
        <th></th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <a href="@Url.Action("EditRole", new { id = @role.Id })"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a> |
                <a href="@Url.Action("DeleteRole", new { id = @role.Id })"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a> |
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to Admin Control Panel", "ControlPanel")
</div>
